<!DOCTYPE html>
<html>
<head>
  <title>Reset Your Password</title>

  {{> sharedHeader }}

  <link rel="stylesheet" href="/public/css/pages/login.css" media="screen">
</head>
<body>
  <section class="login">
    <h1>Draker</h1>
    <form action="/reset" method="post">
      {{#if flash }}
      <div class="message flash">
        {{ flash }}
      </div>
      {{/if}}
      <ul>
        <li><label for="password">Original Password:</label> <input name='password' type='password'></input></li>
        <li><label for="password_new">New Password:</label> <input name='password_new' type='password'></input></li>
        <li><label for="password_new_check">New Password Again:</label> <input name='password_check' type='password'></input></li>
        <li><button class="button primary" type="submit" id='submitButton'>Submit</button></li>
      </ul>
      <a href="/ia">Continue to IA</a>
    </form>
  </section>
</body>
</html>
