/* Buttons and Links */

button.button, a.button {
  background: #ddd;
  background-image: linear-gradient(#ddd, #bbb)
  display: inline-block;
  line-height: 22px;
  min-height: 22px; /* FireFox doesn't like line-height in its buttons */
  padding: 0 .75em;
  margin: 0 6px 0 0;
  font-size: 1em;
  font-weight: normal;
  text-decoration: none;
  cursor: pointer;
  border-radius: 3px;
  text-align: center;
  border: 1px solid #aaa;
  color: #555;
  text-shadow: 0 1px 0 #eee;
  box-shadow: inset 0 1px 0 #eee;
  &.primary {
    background-color: colorDrakerOrange;
    background-image: linear-gradient(#f57a2a, #f0501c);
    border: 1px solid colorDrakerOrange;
    color: #fff;
    text-shadow: 0 1px 0 #d84515;
    box-shadow: inset 0 1px 0 #f49e4f;
    &.sml {
      color: #fff;
    }
  }
  &:disabled,
  &:disabled:hover {
    background-color: #ddd;
    background-image: none;
    border: 1px solid #ccc;
    color: #999;
    text-shadow: 0 1px 0 #fff;
    box-shadow: inset 0 1px 0 #fff;
    cursor: default;
  }
  &.sml {
    line-height: 16px;
    min-height: 16px; /* FireFox doesn't like line-height in its buttons */
    padding: 0 .75em;
    margin: 0 3px 0 0;
    font-size: .75em;
    vertical-align: text-bottom;
    border-radius: 2px;
    color: #333;
  }
}

td .button {
  line-height: 16px;
  min-height: 16px; /* FireFox doesn't like line-height in its buttons */
  padding: 0 .75em;
  margin: 0 3px 0 0;
  font-size: .75em;
  vertical-align: text-bottom;
  border-radius: 2px;
}

a, a:active, a:hover, a:visited {
  color: colorDrakerOrange;
}

.buttons.container {
  margin: 0 0 12px;
}

/* Icons */

span[class*="-icon"] {
  font-family: FontAwesome;
  cursor: pointer;

  &.active {
    color: colorDrakerOrange;
  }
}

/* Tables */

table.basic {
  background: colorBGDarkGrey;
  margin: 0 0 12px;
  padding: 0;
  border: borderBasicDark;
  thead {
    height: 24px;
    background: colorBGDarkGrey;
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
    background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    tr {
      th {
        line-height: 24px;
        padding: 0 6px;
        font-weight: bold;
        text-align: left;
        text-shadow: 0 1px 0 #222;
        &:first-child {
          //border-left: none;
        }
        &:last-child {
          //border-right: none;
        }
      }
    }
  }
  tbody {
    color: #aaa;
    tr {
      &:nth-child(odd) {
        background-color: colorBGMediumGrey;
      }
      &:hover {
        background-color: colorBGLightGrey;
      }
      &:last-child {
        border-bottom: none;
      }
      td {
        padding: 6px 6px;
        &.label {
          font-weight: bold;
        }
      }
    }
  }
  input[type="checkbox"],
  input[type="radio"] {
    padding: 0;
    margin: 0;
    vertical-align: middle;
  }

  input:disabled {
    border: none;
    background: none;
    color: colorPrimaryText;
  }
}

td.actions {
  white-space: nowrap;
}

td.status {
  width: 24px;
}

td.name {
  white-space: nowrap;
}

.statusIndicator {
  background: colorOKBlue;
  width: 12px;
  height: 12px;
  display: block;
  text-indent: -9999px;
  overflow: hidden;
  border-radius: 6px;
  box-shadow: 0 1px 0 #444;
  float: left;
  //margin: 0 auto;
  &.Unknown {
    background: #aaa;
  }
  &.Warning {
    background: colorWarningYellow;
  }
  &.Alert {
    background: colorAlertRed;
  }
}


/* Forms */

form {
  margin: 0;
  padding: 0;
  ul {
    padding:0;
    margin:0 0 12px;
    overflow:hidden;
    li {
      padding:0;
      margin:0 0 .75em;
      &:last-child {
        padding:0;
        margin:0;
      }
      label {
        padding:0;
        margin:0;
        display:block;
      }
    }
  }
  .message {
    margin: 0 0 12px;
  }
}

input[type="email"],
input[type="password"],
input[type="text"],
input[type="tel"],
textarea {
  font-family:Helvetica, sans-serif;
  background:#fff;
  border:1px solid #111;
  line-height:20px;
  padding:3px;
  &:disabled {
    color: #555;
    cursor: default;
  }
}

input[type="checkbox"], input[type="radio"] {
  padding:0;
  margin:0;
  vertical-align: middle;
}

select[disabled], select:disabled {
