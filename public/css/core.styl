/* Misc Layout */

leftColumnWidth = 240px;
leftColumnWidthSml = 200px;

.column_left {
  width: leftColumnWidth;
  float: left;
  margin-left: -100%;
  height: 100%;
  overflow: auto;
  @media screen and (max-width: 1024px) {
    width: leftColumnWidthSml;
  }
}

.column_right {
  position: relative;
  margin-left: leftColumnWidth;
  transition: 0.25s ease-in-out;
  @media screen and (max-width: 1024px) {
    margin-left: leftColumnWidthSml;
  }
  height: 100%;
  overflow: auto;
}

.column_right_wrapper {
  height: 100%;
  width: 100%;
  float: left;
}

.verticalPane {
  height: 50%;
  overflow: auto;
  border-bottom: primaryBorderStyle;
  position: relative;
}

.container {
  overflow: hidden;
  &.half {
    float: left;
    width: 50%;
  }
  &.module {
    overflow: hidden;
    padding:6px;
    height: 300px;
    &.half {
      float: left;
      width: 50%;
    }
    @media screen and (max-width: 1000px) {
      &.half {
        float: none;
        width: 100%;
      }
    }
  }
}

.dropdown {
  position: relative;
  &:hover {
    background-color: colorDropDownBG;
    ul {
      display: inherit;
    }
  }
  &#pageSettings {
    float:right;
  }
  ul {
    display: none;
    position: absolute;
    right: 0;
    top: 28px;
    padding: 0;
    margin: 0;
    z-index: 301;
    white-space: nowrap;
    background: colorDropDownBG;
    text-shadow: none;
    list-style-type: none;
    li {
      font-size: .85em;
      line-height: 24px;
      padding: 0 6px;
      border-bottom: 1px solid #404040;
      cursor: pointer;
      &:hover {
        color: #fff;
      }
    }
  }
}

/* Baseline leaflet styles */

.leaflet-container {
  width: 100%;
  height: 100%;
  background: #B5D0D0 url(loadingIcon) center center no-repeat;
  // Map View Icons
  .leaflet-marker-icon {
    background-position: 0 0;
    background-repeat: no-repeat;
    width: 15px;
    height: 32px;
    &.ok {
      background-image: url(../img/marker_ok.png);
    }
    &.warning {
      background-image: url(../img/marker_warning.png);
    }
    &.alert {
      background-image: url(../img/marker_alert.png);
    }
    &.unknown {
      background-image: url(../img/marker_unknown.png);
    }
  }
  .leaflet-popup {
    color: #555;
    .leaflet-popup-content-wrapper {
      h4 {
        padding:0;
        margin: 0 0 6px;
      }
      p {
        padding: 0;
        margin: 0 0 3px;
      }
      a {
        color: colorDrakerOrange;
      }
      border-radius: 2px!important;
    }
  }
  .leaflet-control {
    transition:.2s;
    opacity: 0.6;
    box-shadow: 0 3px 3px rgba(0,0,0,0.1);
    border: 1px solid #aaa;
    margin: 6px;
    &:hover {
      opacity: 1;
      transition:.2s;
    }
  }
  .layerControls {
    position: absolute;
    top: 0;
    right: 0;
    margin: 9px;
    padding: 6px;
    border: 1px solid #aaa;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.8);
    box-shadow: 0 3px 3px rgba(0,0,0,0.1);
    color: #555;
    ul {
      padding: 0;
      margin: 0;
      list-style-type: none;
      li {
        padding: 0;
        margin: 0 0 3px;
        &:last-child {
          margin: 0;
        }
      }
    }
  }
  button.fullscreen {
    position: absolute;
    bottom: 0;
    left: 0;
    margin: 6px;
  }
}


/* Charts */

.chart {
  position: relative;
  height: 300px;
  width: 100%;
}

/* Admin */

.admin-list {
  background: colorBGDarkGrey;
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    > li {
      padding: 5px;
      text-shadow: 0 1px 0 #222;
      cursor: pointer;
      border-top: borderBasicMedium;
      border-left: borderBasicMedium;
      border-bottom: borderBasicDark;
      border-right: borderBasicDark;
      background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      &:hover {
        background: linear-gradient(#252627, #282828);
      }
    }
  }
}

.navigation-admin-list {
  position: relative;
  height: 100%;
  padding: projectTableHeaderHeight 0 38px 0;
  border-right: borderBasicDark;
  overflow: hidden;

  .list-container {
    height: 100%;
    overflow-y: auto;

    table {
      width: 100%;
      margin: 0;
      border: none;
      border-bottom: borderBasicDark;

      .actions {
        text-align: right;
      }

      tr {
        border-right: 3px solid transparent;
        cursor: pointer;

        &.active {
          border-right-color: colorDrakerOrange;
        }
      }
    }
  }

  .header {
    position: absolute;
    top: 0;
    width: 100%;
    height: projectTableHeaderHeight;
    z-index: 100;
    background: colorBGDarkGrey;
    background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);

    .refresh-icon {
      float: right;
      padding: 3px 6px;
    }
  }

  .footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 6px;
    padding-right: 0;
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);

    text-align: right;

    .create {
      float: left;
    }

    .save, .cancel {
      display: none;
    }
  }
}

/* Modal */

.modal {
  position: absolute;
  z-index: 1001;
  height: auto;
  perspective: 800px;
  perspective-origin: 50% 100px;
  &.hidden {
    transform:scale3d(0,0,0);
  }
}

.obscure {
  z-index: 999;
  background: rgba(0,0,0,0.75);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100px;
  height: 100%;
}

/* Date Selection */

.dateSelection {
  &.multi {
    height: 24px;
    position: relative;
    .current {
      line-height: 22px;
      background: linear-gradient(#101010, #191919);;
      color: #777;
      float: left;
      border: 1px solid #303030;
      height: 100%;
      border-top-left-radius: 2px;
      border-bottom-left-radius: 2px;
      padding: 0 6px;
      font-size: 12px;
      span {
        color: #ccc;
      }
    }
    .expand {
      width: 24px;
      height: 100%;
      line-height: 22px;
      float: left;
      background: linear-gradient(#2e2e2e, #292929);
      border: borderBasicMedium;
      border-left: none;
      overflow: hidden;
      text-align: center;
      //text-indent: -200%;
      border-top-right-radius: 2px;
      border-bottom-right-radius: 2px;
      cursor: pointer;
      color: #999;
      text-shadow: 0 1px 0 #222;
    }
    .calendar {
      position: absolute;
      border: 1px solid #555;
      top: 23px;
      right: 0;
      background: #111;
      padding: 6px;
      box-shadow: 0 5px 5px rgba(0,0,0,0.1);
      .actions {
        height: 18px;
        button {
          float: right;
        }
      }
    }
  }

  .datepicker {
    a {
      color: #ccc;
    }
    a.datepickerGoNext, a.datepickerGoPrev, a.datepickerMonth {
      height: 20px;
      line-height: 20px;
      float: none;
    }
    a.datepickerMonth {
      text-align: center;
      margin: 0;
      width: 100%;
    }
    .datepickerViewDays {
      > thead {
        > tr {
          th {
            position: relative;
            .datepickerGoPrev {
              position: absolute;
              top: 0;
              left: 0;
            }
            .datepickerGoNext {
              position: absolute;
              top: 0;
              right: 0;
            }
          }
        }
      }
    }
    .datepickerSelected {
      background: colorDrakerOrange;
    }
  }
}

/* Loading Indicator */

@keyframes rotate {
  from {transform: rotate(0deg);}
  to   {transform: rotate(359deg);}
}

.loadingIndicator {
  margin: 6px;
  display: inline-block;
  width: 9px;
  height: 9px;
  border: 1px solid #ccc;
  border-right: none;
  border-radius: 50%;
  animation: rotate 1s linear infinite;
}

.chart .loadingIndicator {
  position: absolute;
  top: 125px;
  right: 50%;
}

.button.loading-left:before,
.button.loading-right:after {
  @extend .loadingIndicator;
  border-color: #555;
  vertical-align: middle;
  content: "";
}
.button.loading-left:before {
  margin: 0 3px 0 -3px;
}
.button.loading-right:after {
  margin: 0 -3px 0 3px;
}
.button.primary.loading-left:before,
.button.primary.loading-right:after {
  border-color: #fff;
}
