// Playing with google web fonts
@import url("http://fonts.googleapis.com/css?family=News+Cycle");

// Stylus includes
@import "normalize";
@import "print";
@import "shared";
@import 'nib';
@import 'nib/gradients';

/* ==========================================================================
   Misc Tweaks (sourced from https://github.com/h5bp)
   ========================================================================== */

/*
 * Remove text-shadow in selection highlight: h5bp.com/i
 * These selection declarations have to be separate.
 * Customize the background color to match your design.
 */

::-moz-selection {
    background: #b3d4fc;
    text-shadow: none;
}

::selection {
    background: #b3d4fc;
    text-shadow: none;
}

/*
 * A better looking default horizontal rule
 */

hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid #ccc;
    margin: 1em 0;
    padding: 0;
}

/*
 * Remove the gap between images and the bottom of their containers: h5bp.com/i/440
 */

img {
    vertical-align: middle;
}

/*
 * Remove default fieldset styles.
 */

fieldset {
    border: 0;
    margin: 0;
    padding: 0;
}

/*
 * Allow only vertical resizing of textareas.
 */

textarea {
    resize: vertical;
}

/* ==========================================================================
   Core Styles
   ========================================================================== */

* {
  -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
  -moz-box-sizing: border-box;    /* Firefox, other Gecko */
  box-sizing: border-box;         /* Opera/IE 8+ */
}

body {
  background: #333;
  color: #ccc;
  font-size: 85%; /* Resets 1em to 12px */
  line-height: 1.25em;
  font-family: Helvetica, Arial, Sans-Serif;
  font-weight: 100;
  border-top: 4px solid colorDrakerOrange;
}

/* Basic layout */

headerHeight = 42px;

header {
  background: #333;
  height: headerHeight;
  width: 100%;
  overflow: hidden;
  padding: 0 6px;
  border-bottom: 1px solid #222;
  h1 {
    padding: 0;
    margin: 0;
    float: left;
    background: url(/public/img/logo_draker_sml_wShadow.png) center center no-repeat;
    display: inline-block;
    width: 183px;
    height: headerHeight;
    line-height: headerHeight;
    overflow: hidden;
    a {
      display: inline-block;
      width: 100%
      height: 100%;
      text-indent: -200%;
    }
  }
  nav.global {
    float: right;
    color: #ccc;
    padding: 0;
    margin: 0;
    font-weight: 100;
    text-shadow: 0 0 1px #000;
    font-size: .85em;
    ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
      height: headerHeight
      line-height: headerHeight;
      li {
        padding: 0 9px;
        float: left;
        border-left: 1px solid #222;
        a {
          padding: 0;
          margin: 0;
        }
      }
      li:last-child {
        border-right: none;
      }
      li.username {
        color: #fff;
        border-right: 1px solid #444;
        border-left: none;
      }
    }
  }
}

/* Messages */

.message.flash {
  border: 1px solid #aaa;
  background: #ccc;
  box-shadow: inset 0 1px 0 #ddd;
  color: #111;
  padding: 3px;
  border-radius: 1px;
}

/* Buttons and Links */

button.button, a.button {
  background: #ddd;
  background-image: linear-gradient(#ddd, #bbb)
  display: inline-block;
  line-height: 22px;
  min-height: 22px; /* FireFox doesn't like line-height in its buttons */
  padding: 0 .75em;
  margin: 0 6px 0 0;
  font-size: 1em;
  font-weight: normal;
  text-decoration: none;
  cursor: pointer;
  border-radius: 3px;
  text-align: center;
  border: 1px solid #aaa;
  color: #555;
  text-shadow: 0 1px 0 #eee;
  box-shadow: inset 0 1px 0 #eee;
}

button.button.primary, a.button.primary {
  background-color: colorDrakerOrange;
  background-image: linear-gradient(#f57a2a, #f0501c);
  border: 1px solid colorDrakerOrange;
  color: #fff;
  text-shadow: 0 1px 0 #d84515;
  box-shadow: inset 0 1px 0 #f8ad7c;
}

button.button.disabled, a.button.disabled, button.button.disabled:hover, a.button.disabled:hover {
  border: 1px solid #ccc;
  background-color: #eee;
  background-position: 0 -600px;
  color: #999;
  text-shadow: 0 1px 0 #fff;
}

button.button.sml, a.button.sml {
  line-height: 16px;
  min-height: 16px; /* FireFox doesn't like line-height in its buttons */
  padding: 0 .75em;
  margin: 0 3px 0 0;
  font-size: .75em;
  vertical-align: text-bottom;
  border-radius: 9px;
}

a, a:active, a:hover, a:visited {
  color: colorDrakerOrange;
}

/* Tables */

table.basic {
  border: 1px solid #ccc;
  background: #fff;
  margin: 0 0 12px;
}

table.dataTable {
  border: 1px solid #ccc;
  background:#fff;
}

table.basic thead, table.dataTable thead {
  height: 24px;
  background: #ddd;
  border-bottom: 1px solid #ccc;
}

table.basic thead tr th, table.dataTable thead tr th {
  line-height: 24px;
  padding: 0 6px;
  font-weight: bold;
  border-right: 1px solid #ccc;
  border-left: 1px solid #fff;
  text-align: left;
}

table.basic thead tr th:first-child, table.dataTable thead tr th:first-child {
  border-left: none;
}

table.basic thead tr th:last-child, table.dataTable thead tr th:last-child {
  border-right: none;
}

table.basic tr, table.dataTable thead tr {
  border-bottom: 1px solid #ddd;
}

table.basic tbody tr:nth-child(odd), table.dataTable tbody tr:nth-child(odd) {
  background-color: #f5f5f5;
}

table.basic tbody tr td {
  padding: 3px 6px;
}

table.basic tr:last-child {
  border-bottom: none;
}

table tbody tr td.label {
  font-weight: bold;
}

table tbody tr td input[type="checkbox"], table tbody tr td input[type="radio"] {
  padding: 0;
  margin: 0;
  vertical-align: middle;
}


/* Misc Layout */

leftColumnWidth = 240px;

.column_left {
  width: leftColumnWidth;
  float: left;
  margin-left: -100%;
  height: 100%;
  overflow: auto;
}

.column_right {
  margin-left: leftColumnWidth;
  height: 100%;
  overflow: auto;
}

.column_right_wrapper {
  height: 100%;
  width: 100%;
  float: left;
}