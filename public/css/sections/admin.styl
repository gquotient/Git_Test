@import '../shared';
@import 'nib';
@import 'nib/gradients';


/* Portfolio edit */

.filter, .filter:last-child {
  border: 1px #444 solid;
  background: #202020;
  margin: 0 0 6px;
  overflow: hidden;
  padding: 6px;
  .remove {
    float: right;
  }
}

.alarmsAdmin {
  .conditions {
    padding: 0;
    margin: 0 0 12px;
    list-style-type: none;
    .condition {
      border: 1px #444 solid;
      background: #202020;
      margin: 0 0 6px;
      overflow: hidden;
      padding: 6px;
      label {
        display: inline-block;
      }
    }
    .remove {
      float: right;
    }
  }
}

#page-projectsAdmin {
  padding-top: 200px;

  .project-map {
    position: absolute;
    top: 0;
    width: 100%;
    height: 200px;
    min-width: 800px;
  }

  .geosearch {
    position: absolute;
    top: 12px;
    width: 100%;

    .leaflet-control {
      width: 40%;
      margin 0 auto;
      float: none;
      border-radius: 4px;
    }

    input {
      width: 100%;
      height: 28px;
      padding: 0;
      text-indent: 6px;
      border-radius: 4px;
      border: none;
    }
  }
}

#page-projectsAdmin,
#page-equipmentAdmin {
  min-width: 800px;
  max-width: 1200px;
  height: 100%;
  margin: -6px;
  padding-bottom: 26px;

  > div {
    float: left;
    width: 50%;
    min-width: 400px;
    height: 100%;
  }

  .project-detail,
  .equipment-detail {
    padding: 12px;
    overflow-y: auto;

    fieldset {
      padding: 12px;

      & > div {
        float: left;
        padding-left: 12px;

        &.half {
          width: 50%;
        }

        &.left {
          clear: both;
          padding-left: 0;
        }

        &.right {
          float: right;
        }
      }

      label {
        display: block;

        input {
          width: inherit;
          margin: 3px;
        }
      }

      input, textarea {
        width: 100%;
        margin: 3px 0 12px 0;

        &.invalid {
          background: pink;
        }
      }
    }

    .save {
      position: absolute;
      bottom: 6px;
      z-index: 100;
    }
  }

  .project-footer,
  .equipment-footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 38px;
    padding: 6px;
    padding-right: 0;
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
  }
}

#page-projectEditor {
  position: relative;
  background: #bbb;

  > div {
    height: 100%;
  }

  #overlay {
    position: absolute;
    top: 0;
    right: 0;
    width: 300px;
    background: colorBGDarkGrey;
    border-left: primaryBorderStyle;
    opacity: 0.8;


    .lock-message {
      width: 100%
      text-align: center;
      color: colorDrakerOrange;
      border-bottom: 0;
    }
  }

  #editor > div {
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    padding: 12px;

    &:first-child {
      border-top: none;
    }

    h3 {
      font-size: 1.25em;
      text-shadow: 0 1px 0 #222;
      color: colorDrakerOrange;
    }

    input {
      width: 275px;
      border-radius: 3px;
      color: grey;

      &:focus {
        color: black;
      }

      &:disabled {
        background-color: #bbb;
      }
    }
  }

  .editorDropdown {
    display: none;
    padding: 0;
    margin: 0;
    overflow: hidden;

    position: absolute;
    width: 275px;
    border-radius: 4px;
    border-bottom: borderBasicDark;
    background-color: white;

    ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
      overflow: auto;
      max-height: 400px;

      > li {
        padding: 0;
        margin: 0;
      }
    }

    a {
      display: block;
      padding: 6px;
      border-radius: 3px;
      text-decoration: none;
      color: black;

      &:hover {
        background-color: colorDrakerOrange;
      }
      &.all {
        font-weight: bold;
      }
    }
  }

  #content {
    padding-right: 300px;
  }

  #notes {
    height: 100%;

    textarea {
      width: 100%;
      height: 100%;
      padding: 12px;
      background-color: transparent;
      font-size: 1.25em;
      line-height: 1.5em;
      border: none;
      resize: none;
      outline: none;
    }
  }

  #device-table{
    height: 100%;
    overflow: auto;
    color: black;

    th {
      font-weight: bold;
      background-color: transparent;
      border-color: black;
    }

    tr .htDimmed {
      color: inherit;
      font-style: inherit;
    }

    td {
      background-color: rgba(255, 255, 255, 0.8);
      border-color: black;

      .htAutocompleteArrow {
        color: #bbb;
        cursor: pointer;

        &:hover {
          color: black;
        }
      }
    }
  }
}

