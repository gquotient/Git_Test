/* Module styles */

.module {
  &.issues {
    table {
      width: 100%;
      border: none;
      thead {
        tr {
          th:first-child {
            width: 24px;
          }
        }
      }
      tbody {
        tr {
          cursor: pointer;
          border-bottom: 1px solid #202020;
          td {
            &.status {
              width: 24px;
            }
          }
        }
      }
    }
    > div {
      background: colorBGDarkGrey;
      position: relative;
      height: 100%;
      border: borderBasicDark;
      .actions {
        position: absolute;
        bottom: 0;
        width: 100%;
        padding: 6px;
        border-top: borderBasicMedium;
        background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        a {
          text-decoration: none;
        }
      }
    }
  }
  &.kpis {
    .energyMetrics {
      overflow: hidden
      border-bottom: borderBasicMedium;
      padding: 0 0 18px;
      margin: 0 0 18px;
      .metric {
        float: left;
        width: 33%;
        .label {
          white-space: nowrap;
          overflow: ellipsis;
          font-size: 12px;
          color: #999;
          margin: 0 0 6px;
        }
        .value {
          font-size: 1.5em;
          .unit {
            color: #999;
            font-size: 12px;
          }
        }
      }
    }
    .snapshots {
      .snapshot {
        overflow: hidden;
        width: 100%;
        margin: 0 0 12px;
        .label {
          width: 25%;
          line-height: 24px;
          float: left;
          font-weight: bold;
        }
        .value {
          width: 25%;
          line-height: 24px;
          float: left;
          .unit {
            color: #999;
            font-size: 12px;
          }
        }
        .indicator {
          height: 24px;
          width: 50%;
          float: left;
          .bar {
            height: 8px;
            background: #444;
            span {
              transition: width 0.5s;
              background: #7fbfff;
              display: block;
              height: 8px;
            }
          }
          .legend {
            font-size: 10px;
            color: #999;
            .min {
              float: left;
            }
            .max {
              float: right;
            }
          }
        }
      }
    }
  }
}

.sitemap {
  position: relative;
  .deviceInfoContainer {
    position: absolute;
    top: 0;
    left: 0;
    width: 200px;
    height: 100%;
    .deviceInfo {
      height: 100%;
      width: 100%;
      background: rgba(1, 1, 1, .5);
      transition: .25s ease-in-out;
      margin-left: -100%;
      padding: 6px;
      &:hover {
        background: rgba(1, 1, 1, .85);
        transition: .25s ease-in-out;
      }
      h4 {
        float: left;
        margin: 0 0 6px;
        padding: 0;
      }
      .close {
        float: right;
      }
      hr {
        height: 1px;
        background: #777;
        clear: both;
        border: none;
      }
      .content {

      }
    }
  }
  .controls {
    position: absolute;
    bottom: 0;
    left: 0;
    margin: 12px;
    color: #111;
    ul {
      padding: 0;
      margin: 0 12px 0 0;
      list-style-type: none;
      li {
        float: left;
        padding: 0;
        margin: 0 12px 0 0;
        cursor: pointer;
      }
    }
  }
}
