@import '../shared';
@import 'nib';
@import 'nib/gradients';

/* ==========================================================================
   Portfolio Styles
   ========================================================================== */

html, body, body > div {
  height: 100%;
}

/* Main components */

primaryBorderStyle = borderBasicDark;

header {
  background: colorBGDarkGrey;
  height: headerHeight;
  width: 100%;
  overflow: hidden;
  padding: 0 6px;
  border-bottom: borderBasicDark;
  position: relative;
  z-index: 201;
  h1 {
    padding: 0;
    margin: 0;
    float: left;
    background: url(../img/logo_draker_sml_wShadow.png) center center no-repeat;
    display: inline-block;
    width: 183px;
    height: headerHeight;
    line-height: headerHeight;
    overflow: hidden;
    a {
      display: inline-block;
      width: 100%
      height: 100%;
      text-indent: -200%;
    }
  }
  nav.global {
    float: right;
    padding: 0;
    margin: 0;
    font-weight: 100;
    text-shadow: 0 0 1px #000;
    font-size: .85em;
    ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
      height: headerHeight
      line-height: headerHeight;
      li {
        padding: 0;
        float: left;
        border-left: borderBasicDark;
        border-right: 1px solid #292929;
        &.team_select {
          padding: 0 9px;
        }
        &.username {
          color: #fff;
          border-left: none;
          padding: 0 9px;
        }
        &:first-child {
          border-left: none;
        }
        &:last-child {
          border-right: none;
        }
        a {
          display: block;
          text-decoration: none;
          padding: 0 9px;
          margin: 0;
          &:hover {
            background: #252525;
          }
        }
      }
    }
  }
}

.banner {
  .notification {
    background: linear-gradient(#f8f356, #DFD85C);
    color: #555;
    height: bannerHeight;
    line-height: bannerHeight;
    padding: 0 6px;
    text-shadow: 0 1px 0 #f8f356;
    position: relative;
    z-index: 100;
    .actions {
      float: right;
    }
  }
}

.nav_page {
  width: 100%;
  height: pageNavHeight;
  line-height: pageNavHeight;
  position: relative;
  z-index: 201;
  padding: 0 6px;
  margin:0;
  background: colorBGDarkGrey;
  background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
  border-top: borderBasicMedium;
  border-bottom: borderBasicDark;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
  text-shadow: 0 0 1px #000;
  .breadcrumbs {
    float:left;
    ul.breadcrumbs {
      padding: 0;
      margin: 0;
      list-style-type: none;
      float: left;
      line-height: pageNavHeight - 2px;
      li {
        background: url(../../img/arrow_breadcrumbs.png) right center no-repeat;
        float: left;
        padding: 0 15px 0 0;
        margin: 0 6px 0 0;
        cursor: pointer;
        &:hover {
          transition:.5s;
          color: #fff;
        }
        &.active, &:last-child {
          color: #fff;
          font-weight: bold;
          background: none;
        }
      }
    }
  }
  .dropdown.settings {
    width: 30px;
    height: pageNavHeight - 2px;;
    background: url(../img/icon_settings.png) center center no-repeat;
    opacity: .25;
    display: none;
    &.active {
      display: inherit;
    }
    &:hover {
      background-color: colorDropDownBG;
      opacity: 1;
    }
  }
}

.nav_content {
  height: 100%;
  overflow: auto;
  position: relative;
  z-index: 200;
  background: colorBGDarkGrey;
  border-right: borderBasicDark;
  color: #aaa;
  .sort {
    position: absolute;
    top: 0;
    width: 100%;
    padding: 0 6px;
    line-height: 30px;
    background: #f00;
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
  }
  .actions {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 6px;
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
  }
  ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    > li {
      padding: 0px;
      text-shadow: 0 1px 0 #222;
      margin: 0;
      border-top: borderBasicMedium;
      border-bottom: borderBasicDark;
      background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      cursor: pointer;
      a {
        display: block;
        padding: 6px;
        text-decoration: none;
      }
      &.active {
        > a {
          border-right: 3px solid colorDrakerOrange;
          color: colorPrimaryText;
          transition:.2s;
        }
      }
      &.empty {
        background: none;
        border: none;
        padding: 6px;
        font-style: italic;
        box-shadow: none;
        cursor: default;
        &:hover {
          background: none;
        }
      }
      &.nav-item {
        padding: 6px;
        h3 {
          margin: 0 0 6px;
          white-space: nowrap;
          overflow: ellipsis;
          font-size: 1.25em;
          font-weight: 100;
          color: #eee;
        }
        ul {
          background: none;
          border: none;
          padding: 0;
          margin: 0;
          overflow: hidden;
          list-style-type: none;
          li {
            background-position: left center;
            background-repeat: no-repeat;
            border: none;
            padding: 0 0 0 12px;
            margin: 0 12px 0 0;
            float: left;
            &.projects {
              background-image: url(../../img/icon_project_9x12.png);
            }
            &.subPortfolios {
              background-image: url(../../img/icon_portfolio_12x9.png);
              padding: 0 0 0 15px;
            }
            &.DCCapacity {
              background-image: url(../../img/icon_energy_12x12.png);
              padding: 0 0 0 15px;
            }
          }
        }
      }
      &:hover {
        background: linear-gradient(#252627, #282828);

      }
      &:first-child {
        border-top: none;
      }
    }
  }
  ul.portfolio-list, ul.project-list {
    padding-top: 30px;
    padding-bottom: 38px;
    > .active {
      border-right: 3px solid colorDrakerOrange;
      color: colorPrimaryText;
      transition:.2s;
    }
  }
  > ul.devices {
    border: none;
    background: none;
    > li {
      > a {
        border-top: borderBasicMedium;
        border-bottom: borderBasicDark;
        background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        &:hover {
          background: linear-gradient(#252627, #282828);
        }
      }
    }
    li {
      width: 100%;
      position: relative;
      background: none;
      border: none;
      > ul {
        height: 0;
        overflow: hidden;
        transition: all 1s ease-in-out;
      }
      &.expanded {
        > ul {
          max-height: 10000px; // Not sure, at the moment, why this makes it work but it does
          height: auto;
          transition: all 1s ease-in-out;
        }
        > a > .expand {
          background: url(../../img/icon_collapse.png) right center no-repeat;
        }
      }
      a {
        .expand {
          background: url(../../img/icon_expand.png) right center no-repeat;
          opacity: 0;
          position: absolute;
          top: 0;
          right: 0;
          display: block;
          width: 30px;
          height: 30px;
          padding: 0 30px 0 0;
          text-indent: -200%;
          overflow: hidden;
          border-left: 1px dotted #202020;
        }
        &:hover {
          > .expand {
            opacity: 1;
          }
        }
      }
    }
    ul {
      padding: 0 0 0 6px;
    }
  }
}

/* Detail View */

#page {
  // Force overflow hidden to prevent any chance of doubled scroll bars
  position: absolute;
  top: 0;
  overflow: hidden;
  padding-top: 0;
  height: 100%;
  width: 100%;
  padding-top: headerHeight + pageNavHeight + 4; // 4 is for body border-top
  &.withBanner {
    padding-top: bannerHeight + headerHeight + pageNavHeight + 4;
  }
  > div { // This is an artifact of how Backbone/Marionette views work
    height: 100%;
    max-height: 100%;
    overflow: hidden;
  }
  .basicView {
    padding: 15px;
  }
  #page-portfolioDetail {
    .verticalPane {
      &.top {
        height: 60%;
      }
      &.bottom {
        height: 40%;
      }
    }
    #map {
      width: 100%;
      height: 100%;
      padding: kpiHeight 0 0 0;
    }
    #kpis {
      background: colorBGDarkGrey;
      position: fixed;
      z-index: 100;
      width: 100%;
      padding: 0;
      height: kpiHeight;
      line-height: kpiHeight;
      overflow: hidden;
      background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      //border-top: borderBasicMedium;
      border-bottom: borderBasicDark;
      box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      text-shadow: 0 1px 0 #000;
      ul {
        width: 100%;
        padding: 0 6px;
        margin: 0;
        list-style-type: none;
        overflow: hidden;
        li {
          margin: 0 6px;
          padding: 0;
          float: left;
          .value {
            font-weight: bold;
          }
          .unit {
            color: #999;
            font-size: .85em;
          }
        }
        li:last-child {
          margin-right: 0;
        }
      }
    }
    #projects {
      .bg_tableHeader {
        width: 100%;
        height: projectTableHeaderHeight;
        position: fixed;
        z-index: 100;
        background: colorBGDarkGrey;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
        background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        border-top: borderBasicMedium;
        border-bottom: borderBasicDark;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      }
      table {
        border: none;
        width: 100%;
        margin: 0;
        border-bottom: borderBasicDark;

        thead {
          // Hack to push the table body contents visible
          // This seems to work better than putting it on the body
          border-bottom: projectTableHeaderHeight solid #222;
          tr {
            th {
              div {
                display: block;
                height: projectTableHeaderHeight;
                position: fixed;
                z-index: 101;
                white-space: nowrap;
                .unit {
                  font-weight: 100;
                  font-size: 12px;
                  color: #999;
                }
              }
            }
          }
        }
        tbody {

          tr {
            cursor: pointer;
            td {
              //width: 25%;
              //text-align: center;
              &.ACCapacity {
                width: 124px;
              }
              &.DCCapacity {
                width: 124px;
              }
            }
            td.name {
              text-align: left;
            }
          }
        }
      }
    }
  }
  #page-projectDetail {
    overflow: auto;
    .map {
      height: 400px;
      border-bottom: borderBasicDark;
    }
    .kpis {
      padding: 6px;
    }
    .issues {
      table {
        width: 100%;
        border-top: none;
      }
    }
  }

  #page-portfolioDashboard {
    .projectStatus {
      float: left;
      width: 22%;
      margin: 0.5em 1%;
      background: #444;
    }
  }

  #page-admin, #page-projectDevices {
    .column_right {
      padding: 12px;
    }
  }
}

#page-projectEditor {
  position: relative;

  canvas {
    background: #bbb;
  }

  #overlay {
    position: absolute;
    top: 0;
    right: 0;
    width: 400px;
    height: 100%;
    background: colorBGDarkGrey;
    border-left: primaryBorderStyle;
    opacity: 0.8;
  }

  #editor > div {
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    padding: 12px;
    padding-left: 24px;

    &:first-child {
      border-top: none;
    }

    h3 {
      margin-left: -12px;
      font-size: 1.25em;
      text-shadow: 0 1px 0 #222;
      color: colorDrakerOrange;
    }

    input {
      width: 275px;
      padding-right: 5px;
      border-radius: 3px;
      color: grey;

      &:focus {
        color: black;
      }
    }

    button {
      width: 75px;
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
      overflow: auto;

      position: absolute;
      min-width: 275px;
      max-height: 400px;
      border-radius: 3px;
      border-bottom: borderBasicDark;
      background-color: white;

      > li {
        padding: 0;
        margin: 0;

        a {
          display: block;
          padding: 6px;
          border-radius: 3px;
          text-decoration: none;
          color: black;

          &:hover {
            background-color: colorDrakerOrange;
          }
        }
      }
    }
  }
}

.leaflet-container {
  .leaflet-popup {
    color: #555;
    .leaflet-popup-content-wrapper {
      h4 {
        padding:0;
        margin: 0 0 6px;
      }
      p {
        padding: 0;
        margin: 0 0 3px;
      }
      a {
        color: colorDrakerOrange;
      }
      border-radius: 2px!important;
    }
  }
  .leaflet-control-zoom {
    opacity: 0.6;
    box-shadow: 0 3px 3px rgba(0,0,0,0.1);
    &:hover {
      opacity: 1;
      transition:.2s;
    }
  }
  .layerControls {
    position: absolute;
    top: 12px;
    right: 12px;
    padding: 6px;
    border: 1px solid #aaa;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.8);
    box-shadow: 0 3px 3px rgba(0,0,0,0.1);
    color: #555;
    opacity: 0.6;
    &:hover {
      opacity: 1;
      transition:.2s;
    }
    ul {
      padding: 0;
      margin: 0;
      list-style-type: none;
      li {
        padding: 0;
        margin: 0 0 3px;
        &:last-child {
          margin: 0;
        }
      }
    }
  }
}

/* Module styles */

.module {
  &.issues {
    table {
      border: none;
    }
    > div {
      position: relative;
      height: 100%;
      border: borderBasicDark;
      .actions {
        position: absolute;
        bottom: 0;
        width: 100%;
        padding: 6px;
        border-top: borderBasicMedium;
        background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        a {
          text-decoration: none;
        }
      }
    }
  }
}
