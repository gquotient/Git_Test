@import '../shared';
@import 'nib';
@import 'nib/gradients';

/* ==========================================================================
   Portfolio Styles
   ========================================================================== */

html, body {
  height: 100%;
}

/* Main components */

primaryBorderStyle = borderBasicDark;

#notificationBanner {
  .notification {
    background: linear-gradient(#f8f356, #DFD85C);
    color: #555;
    height: notificationBannerHeight;
    line-height: notificationBannerHeight;
    padding: 0 6px;
    text-shadow: 0 1px 0 #f8f356;
    position: relative;
    z-index: 100;
    .actions {
      float: right;
    }
  }
}

#nav_page {
  width: 100%;
  height: pageNavHeight;
  line-height: pageNavHeight;
  overflow: hidden;
  position: relative;
  z-index: 201;
  padding: 0 6px;
  margin:0;
  background: colorBGDarkGrey;
  background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
  border-top: borderBasicMedium;
  border-bottom: borderBasicDark;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
  text-shadow: 0 0 1px #000;
  ul.breadcrumbs {
    padding: 0;
    margin: 0;
    list-style-type: none;
    float: left;
    li {
      background: url(../../img/arrow_breadcrumbs.png) right center no-repeat;
      float: left;
      padding: 0 15px 0 0;
      margin: 0 6px 0 0;
      cursor: pointer;
      &:hover {
        transition:.5s;
        color: #fff;
      }
      &.active, &:last-child {
        color: #fff;
        font-weight: bold;
        background: none;
      }
    }
  }
  #edit {
    color: colorDrakerOrange;
    float: right;
    cursor: pointer;
  }
}

body > div {
  height: 100%;
}

.contentContainer {
  // Force overflow hidden to prevent any chance of doubled scroll bars
  position: absolute;
  top: 0;
  overflow: hidden;
  padding-top: 0;
  height: 100%;
  width: 100%;
  padding-top: headerHeight + pageNavHeight + 4; // 4 is for body border-top
  &.withBanner {
    padding-top: notificationBannerHeight + headerHeight + pageNavHeight + 4;
  }
}

.nav_content {
  height: 100%;
  overflow: auto;
  position: relative;
  z-index: 200;
  background: colorBGDarkGrey;
  border-right: primaryBorderStyle;
  color: #aaa;
  > ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    > li {
      padding: 0px;
      text-shadow: 0 1px 0 #222;
      margin: 0;
      border-top: borderBasicMedium;
      border-bottom: borderBasicDark;
      background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      cursor: pointer;
      a {
        display: block;
        padding: 6px;
        text-decoration: none;
      }
      &.active {
        a {
          border-right: 3px solid colorDrakerOrange;
          color: colorPrimaryText;
        }
      }
      &.empty {
        background: none;
        border: none;
        padding: 6px;
        font-style: italic;
        box-shadow: none;
        cursor: default;
        &:hover {
          background: none;
        }
      }
      &.portfolio {
        padding: 6px;
        h3 {
          margin: 0 0 6px;
          white-space: nowrap;
          overflow: ellipsis;
          font-size: 1.25em;
          font-weight: 100;
          color: #eee;
        }
        ul {
          padding: 0;
          margin: 0;
          overflow: hidden;
          list-style-type: none;
          li {
            background-position: left center;
            background-repeat: no-repeat;
            padding: 0 0 0 12px;
            margin: 0 12px 0 0;
            float: left;
            &.projects {
              background-image: url(../../img/icon_project_9x12.png);
            }
            &.subPortfolios {
              background-image: url(../../img/icon_portfolio_12x9.png);
              padding: 0 0 0 15px;
            }
            &.DCCapacity {
              background-image: url(../../img/icon_energy_12x12.png);
              padding: 0 0 0 15px;
            }
          }
        }
      }
      &:hover {
        background: linear-gradient(#252627, #282828);
      }
      &:first-child {
        border-top: none;
      }
    }
  }
}

/* Detail View */

projectTableHeaderHeight = 24px;
kpiHeight = 30px;

#page {
  //border: 1px solid #f00;
  height: 100%;
  overflow: auto;

  > div { // This is an artifact of how Backbone/Marionette views work
    height: 100%;
    max-height: 100%;
    overflow: hidden;
  }
  .basicView {
    padding: 15px;
  }
  #page-portfolioDetail {
    .verticalPane {
      &.top {
        height: 60%;
      }
      &.bottom {
        height: 40%;
      }
    }
    #map {
      width: 100%;
      height: 100%;
      padding: kpiHeight 0 0 0;
    }
    #kpis {
      background: colorBGDarkGrey;
      position: fixed;
      z-index: 100;
      width: 100%;
      padding: 0;
      height: kpiHeight;
      line-height: kpiHeight;
      overflow: hidden;
      background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      //border-top: borderBasicMedium;
      border-bottom: borderBasicDark;
      box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      text-shadow: 0 1px 0 #000;
      ul {
        width: 100%;
        padding: 0 6px;
        margin: 0;
        list-style-type: none;
        overflow: hidden;
        li {
          margin: 0 6px;
          padding: 0;
          float: left;
          .value {
            font-weight: bold;
          }
          .unit {
            color: #999;
            font-size: .85em;
          }
        }
        li:last-child {
          margin-right: 0;
        }
      }
    }
    #projects {
      .bg_tableHeader {
        width: 100%;
        height: projectTableHeaderHeight;
        position: fixed;
        z-index: 100;
        background: colorBGDarkGrey;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
        background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        border-top: borderBasicMedium;
        border-bottom: borderBasicDark;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      }
      table {
        border: none;
        width: 100%;
        margin: 0;
        thead {
          // Hack to push the table body contents visible
          // This seems to work better than putting it on the body
          border-bottom: projectTableHeaderHeight solid #222;
          tr {
            th {
              div {
                display: block;
                height: projectTableHeaderHeight;
                position: fixed;
                z-index: 101;
                white-space: nowrap;
                .unit {
                  font-weight: 100;
                  font-size: 12px;
                  color: #999;
                }
              }
            }
          }
        }
        tbody {

          tr {
            cursor: pointer;
            td {
              width: 25%;
              //text-align: center;
            }
            td.name {
              text-align: left;
            }
          }
        }
      }
    }
  }
  #page-projectDetail {
    overflow: auto;
    #map {
      height: 400px;
      border-bottom: borderBasicDark;
    }
    #kpis {
      padding: 6px;
    }
    #alarms {
      table {
        width: 100%;
        border-top: none;
      }
    }
  }

  #page-portfolioDashboard {
    .projectStatus {
      float: left;
      width: 22%;
      margin: 0.5em 1%;
      background: #444;
    }
  }

  #page-admin {
    .column_right {
      padding: 12px;
    }
  }
}

#page-projectEditor {
  canvas {
    background: #bbb;
  }

  .overlayContainer {
    float: right;
    width: 400px;
    height: 100%;
    background: colorBGDarkGrey;
    border-left: primaryBorderStyle;
    opacity: 0.8;
  }

  #overlay > div {
    border-top: borderBasicMedium;
    border-bottom: borderBasicDark;
    padding: 12px;
    padding-left: 24px;

    &:first-child {
      border-top: none;
    }

    h3 {
      margin-left: -12px;
      font-size: 1.25em;
      text-shadow: 0 1px 0 #222;
      color: colorDrakerOrange;
    }

    form {
      input {
        width: 275px;
        padding-right: 5px;
        border-radius: 3px;
        color: grey;

        &:focus {
          color: black;
        }
      }

      button {
        width: 75px;
      }
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
      overflow: auto;

      position: absolute;
      min-width: 275px;
      max-height: 400px;
      border-radius: 3px;
      border-bottom: borderBasicDark;
      background-color: white;

      > li {
        padding: 0;
        margin: 0;

        a {
          display: block;
          padding: 6px;
          border-radius: 3px;
          text-decoration: none;
          color: black;

          &:hover {
            background-color: colorDrakerOrange;
          }
        }
      }
    }
  }
}
