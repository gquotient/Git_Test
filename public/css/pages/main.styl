@import "../shared";

/* ==========================================================================
   Portfolio Styles
   ========================================================================== */

html, body {
  height: 100%;
}

/* Main components */

pageNavHeight = 30px;

#nav_page {
  background: #bbb;
  height: pageNavHeight;
  width: 100%;
  overflow: hidden;
  line-height: pageNavHeight;
  padding: 0 6px;
  margin:0;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #aaa;

  ul.breadcrumbs {
    padding: 0;
    margin: 0;
    list-style-type: none;
    float: left;

    li {
      float: left;
      margin: 0 6px 0 0;
      color: #555;
      cursor: pointer;

      a:hover {
        text-decoration: underline;
      }
    }
    li.active, li:last-child {
      color: #111;
    }
  }
}

.contentContainer {
  // Force overflow hidden to prevent any chance of doubled scroll bars
  overflow: hidden;
}

#nav_content {
  border-right: 1px solid #aaa;
  overflow: auto;
  height: 100%;
  .back {
    cursor: pointer;
  }
  .all {
    cursor: pointer;
  }
  ul.portfolios {
    padding: 0;
    margin: 0;
    list-style-type: none;
    li.portfolio {
      border-top: 1px solid #fff;
      border-bottom: 1px solid #ccc;
      padding: 6px;
      margin: 0;
      cursor: pointer;
      h3 {
        margin: 0px;
        white-space: nowrap;
        overflow: ellipsis;
      }
    }
    .portfolio:hover {
      background: #ddd;
    }
    .portfolio:last-child {

    }
    .portfolio:first-child {
      border-top: none;
    }
  }
}

/* Detail View */

projectTableHeaderHeight = 24px;
kpiHeight = 30px;

#content {
  //border: 1px solid #f00;
  overflow: auto;
  height: 100%;
  position: relative;
  > div { // This is an artifact of how Backbone/Marionette views work
    height: 100%;
    max-height: 100%;
    overflow: hidden;
  }
  .verticalPane {
    height: 50%;
    min-height: 50%;
    overflow: auto;
    border-bottom: 1px solid #aaa;
    position: relative;
  }

  #map_view {
    width: 100%;
    height: 100%;
    padding: kpiHeight 0 0 0;
    #leafletContainer {
      width: 100%;
      height: 100%;
    }
  }

  #kpis {
    background: #ddd;
    position: fixed;
    z-index: 100;
    width: 100%;
    padding: 0 6px;
    height: kpiHeight;
    line-height: kpiHeight;
    border-bottom: 1px solid #aaa;
    overflow: hidden;
    ul {
      padding: 0;
      margin: 0;
      list-style-type: none;
      li {
        margin: 0 6px;
        padding: 0;
        float: left;
        .unit {
          color: #777;
          font-size: .85em;
        }
      }
      li:last-child {
        margin-right: 0;
      }
    }
  }

  #projects {
    position: relative;
    .bg_tableHeader {
      width: 100%;
      height: projectTableHeaderHeight;
      position: fixed;
      background: #ddd;
      border-bottom: 1px solid #aaa;
    }
    table {
      thead {
        tr {
          th {
            div {
              position: fixed;
              height: projectTableHeaderHeight;
              display: block;
            }
          }
        }
      }
      tbody {
        border-top: projectTableHeaderHeight solid #fff;
      }
      border: none;
      border-bottom: 1px solid #ccc;
      width: 100%;
      margin: 0;
      height: 100%;
    }
  }
}
