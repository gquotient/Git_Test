@import '../shared';
@import 'nib';
@import 'nib/gradients';

/* ==========================================================================
   Portfolio Styles
   ========================================================================== */

html, body {
  height: 100%;
}

/* Main components */

pageNavHeight = 30px;
primaryBorderStyle = borderBasicDark;

#nav_page {
  width: 100%;
  height: pageNavHeight;
  line-height: pageNavHeight;
  overflow: hidden;
  position: relative;
  z-index: 201;
  padding: 0 6px;
  margin:0;
  background: colorBGDarkGrey;
  background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
  border-top: borderBasicMedium;
  border-bottom: borderBasicDark;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
  text-shadow: 0 0 1px #000;
  ul.breadcrumbs {
    padding: 0;
    margin: 0;
    list-style-type: none;
    float: left;
    li {
      background: url(../../img/arrow_breadcrumbs.png) right center no-repeat;
      float: left;
      padding: 0 15px 0 0;
      margin: 0 6px 0 0;
      cursor: pointer;
      a:hover {
        text-decoration: underline;
      }
      &.active, &:last-child {
        color: #fff;
        font-weight: bold;
        background: none;
      }
    }
  }
}

.contentContainer {
  // Force overflow hidden to prevent any chance of doubled scroll bars
  overflow: hidden;
}

#nav_content {
  height: 100%;
  overflow: auto;
  position: relative;
  z-index: 200;
  background: colorBGDarkGrey;
  border-right: primaryBorderStyle;
  color: #aaa;
  ul.portfolios {
    padding: 0;
    margin: 0;
    list-style-type: none;
    li {
      padding: 6px;
      text-shadow: 0 1px 0 #222;
      margin: 0;
      &.empty {
        font-style: italic;
      }
      &.portfolio {
        border-top: borderBasicMedium;
        border-bottom: borderBasicDark;
        background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        cursor: pointer;
        h3 {
          margin: 0 0 6px;
          white-space: nowrap;
          overflow: ellipsis;
          font-size: 1.25em;
          font-weight: 100;
          color: #eee;
        }
        ul {
          padding: 0;
          margin: 0;
          overflow: hidden;
          list-style-type: none;
          li {
            background: url(../../img/icon_project_9x12.png) left center no-repeat;
            padding: 0 0 0 12px;
            margin: 0 12px 0 0;
            float: left;
            &.projects {
              background-image: url(../../img/icon_project_9x12.png);
            }
            &.subPortfolios {
              background-image: url(../../img/icon_portfolio_12x9.png);
              padding: 0 0 0 15px;
            }
            &.DCCapacity {
              background-image: url(../../img/icon_energy_12x12.png);
              padding: 0 0 0 15px;
            }
          }
        }
        &.portfolio:hover {
          background: linear-gradient(#252627, #282828);
        }
        &.portfolio:last-child {
          box-shadow: 0 0 7px rgba(0, 0, 0, .15);
        }
        &.portfolio:first-child {
          border-top: none;
        }
      }
    }
  }
}

/* Detail View */

projectTableHeaderHeight = 24px;
kpiHeight = 30px;

#page {
  //border: 1px solid #f00;
  height: 100%;
  overflow: auto;
  position: relative;
  > div { // This is an artifact of how Backbone/Marionette views work
    height: 100%;
    max-height: 100%;
    overflow: hidden;
  }
  .portfolioView {
    .verticalPane {
      &.top {
        height: 60%;
      }
      &.bottom {
        height: 40%;
      }
    }
    #map {
      width: 100%;
      height: 100%;
      padding: kpiHeight 0 0 0;
    }
    #kpis {
      background: colorBGDarkGrey;
      position: fixed;
      z-index: 100;
      width: 100%;
      padding: 0;
      height: kpiHeight;
      line-height: kpiHeight;
      overflow: hidden;
      background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      //border-top: borderBasicMedium;
      border-bottom: borderBasicDark;
      box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      text-shadow: 0 1px 0 #000;
      ul {
        width: 100%;
        padding: 0 6px;
        margin: 0;
        list-style-type: none;
        overflow: hidden;
        li {
          margin: 0 6px;
          padding: 0;
          float: left;
          .value {
            font-weight: bold;
          }
          .unit {
            color: #999;
            font-size: .85em;
          }
        }
        li:last-child {
          margin-right: 0;
        }
      }
    }
    #projects {
      .bg_tableHeader {
        width: 100%;
        height: projectTableHeaderHeight;
        position: fixed;
        z-index: 100;
        background: colorBGDarkGrey;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
        background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        border-top: borderBasicMedium;
        border-bottom: borderBasicDark;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      }
      table {
        border: none;
        width: 100%;
        height: 100%;
        margin: 0;
        thead {
          tr {
            th {
              div {
                display: block;
                height: projectTableHeaderHeight;
                position: fixed;
                z-index: 101;
                white-space: nowrap;
                .unit {
                  font-weight: 100;
                  font-size: 12px;
                  color: #999;
                }
              }
            }
          }
        }
        tbody {
          border-top: projectTableHeaderHeight solid #222;
          tr {
            cursor: pointer;
            td {
              width: 25%;
              //text-align: center;
            }
            td.name {
              text-align: left;
            }
          }
        }
      }
    }
  }
  .projectView {
    #map {
      height: 400px;
      border-bottom: borderBasicDark;
    }
    #kpis {
      padding: 6px;
    }
    #alarms {
      table {
        width: 100%;
        border-top: none;
      }
    }
  }
}
