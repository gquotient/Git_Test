@import "../shared";

/* ==========================================================================
   Portfolio Styles
   ========================================================================== */

html, body {
  height: 100%;
}

pageNavHeight = 30px;

#nav_page {
  background: #aaa;
  height: pageNavHeight;
  width: 100%;
  overflow: hidden;
  line-height: pageNavHeight;
  padding: 0 6px;
  margin:0;

  ul.breadcrumbs {
    padding: 0;
    margin: 0;
    list-style-type: none;
    float: left;

    li {
      float: left;
      margin: 0 6px;

      a {
        display: inline-block;
        width: 100%;
        color: #000;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }
    }
    li.active {
      font-weight: bold;
    }
  }
}

.contentContainer {
  height: 500px;
  overflow: hidden;

  #nav_content {
    width: 25%;
    float: left;
    border-right: 1px solid #aaa;
    overflow: auto;
    height: 100%;
    min-height: 100%;
    max-height: 100%;
    .back {
      cursor: pointer;
    }
    .all {
      cursor: pointer;
    }
    .portfolio {
      border-top: 1px solid #aaa;
      padding: 3px;
      margin: 0;
      cursor: pointer;
      h3 {
        margin: 0px;
        white-space: nowrap;
        overflow: ellipsis;
      }
    }
    .portfolio:hover {
      background: #ccc;
    }
    .portfolio:last-child {
      border-bottom: 1px solid #aaa;
    }
  }

  #content {
    width: 75%;
    float: right;
    //border: 1px solid #f00;
    overflow: auto;
    height: 100%;
    position: relative;
    > div { // This is an artifact of how Backbone/Marionette views work
      height: 100%;
      max-height: 100%;
      overflow: hidden;
    }
    .verticalPane {
      height: 50%;
      min-height: 50%;
      overflow: auto;
      border-bottom: 1px solid #ccc;
    }
  }
}
