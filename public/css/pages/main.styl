@import '../shared';
@import 'nib';
@import 'nib/gradients';

/* ==========================================================================
   Portfolio Styles
   ========================================================================== */

html, body {
  height: 100%;
}

/* Main components */

pageNavHeight = 30px;
primaryBorderStyle = borderBasicDark;

#nav_page {
  width: 100%;
  height: pageNavHeight;
  line-height: pageNavHeight;
  overflow: hidden;
  position: relative;
  z-index: 201;
  padding: 0 6px;
  margin:0;
  background: colorBGDarkGrey;
  background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
  border-top: borderBasicMedium;
  border-bottom: borderBasicDark;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
  font-weight: 100;
  text-shadow: 0 0 1px #000;
  ul.breadcrumbs {
    padding: 0;
    margin: 0;
    list-style-type: none;
    float: left;
    li {
      background: url(../../img/arrow_breadcrumbs.png) right center no-repeat;
      float: left;
      padding: 0 15px 0 0;
      margin: 0 6px 0 0;
      cursor: pointer;
      a:hover {
        text-decoration: underline;
      }
    }
    li.active, li:last-child {
      color: #fff;
      background: none;
    }
  }
}

.contentContainer {
  // Force overflow hidden to prevent any chance of doubled scroll bars
  overflow: hidden;
}

#nav_content {
  height: 100%;
  overflow: auto;
  position: relative;
  z-index: 200;
  background: colorBGDarkGrey;
  border-right: primaryBorderStyle;
  color: #aaa;
  ul.portfolios {
    padding: 0;
    margin: 0;
    list-style-type: none;
    li.empty {
      padding: 6px;
      text-shadow: 0 1px 0 #222;
    }
    li.portfolio {
      border-top: borderBasicMedium;
      border-bottom: borderBasicDark;
      background: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      text-shadow: 0 1px 0 #000;
      padding: 6px;
      margin: 0;
      cursor: pointer;
      ul {
        padding: 0;
        margin: 0;
        overflow: hidden;
        list-style-type: none;
        li {
          background: url(../../img/icon_project_9x12.png) left center no-repeat;
          padding: 0 0 0 12px;
          margin: 0 12px 0 0;
          float: left;
        }
        li.projects {
          background-image: url(../../img/icon_project_9x12.png);
        }
        li.subPortfolios {
          background-image: url(../../img/icon_portfolio_12x9.png);
          padding: 0 0 0 15px;
        }
        li.DCCapacity {
          background-image: url(../../img/icon_energy_12x12.png);
          padding: 0 0 0 15px;
        }
      }
      h3 {
        margin: 0 0 6px;
        white-space: nowrap;
        overflow: ellipsis;
        font-size: 1.25em;
        font-weight: 100;
        color: #eee;
      }
    }
    li.portfolio:hover {
      background: linear-gradient(#252627, #282828);
    }
    li.portfolio:last-child {
      box-shadow: 0 0 7px rgba(0, 0, 0, .15);
    }
    li.portfolio:first-child {
      border-top: none;
    }
  }
}

/* Detail View */

projectTableHeaderHeight = 24px;
kpiHeight = 30px;

#page {
  //border: 1px solid #f00;
  height: 100%;
  overflow: auto;
  position: relative;
  > div { // This is an artifact of how Backbone/Marionette views work
    height: 100%;
    max-height: 100%;
    overflow: hidden;
  }
  .verticalPane {
    height: 50%;
    overflow: auto;
    border-bottom: primaryBorderStyle;
    position: relative;
  }
  .verticalPane.top {
    height: 60%;
  }
  .verticalPane.bottom {
    height: 40%;
  }
  // Baseline leaflet styles
  #leafletContainer {
    width: 100%;
    height: 100%;
    background: #B5D0D0 url(loadingIcon) center center no-repeat;
  }
  .portfolioView {
    #map_view {
      width: 100%;
      height: 100%;
      padding: kpiHeight 0 0 0;
    }

    #kpis {
      background: colorBGDarkGrey;
      position: fixed;
      z-index: 100;
      width: 100%;
      padding: 0;
      height: kpiHeight;
      line-height: kpiHeight;
      overflow: hidden;
      background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
      //border-top: borderBasicMedium;
      border-bottom: borderBasicDark;
      box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      text-shadow: 0 1px 0 #000;
      ul {
        width: 100%;
        padding: 0 6px;
        margin: 0;
        list-style-type: none;
        overflow: hidden;
        li {
          margin: 0 6px;
          padding: 0;
          float: left;
          .value {
            font-weight: bold;
          }
          .unit {
            color: #999;
            font-size: .85em;
          }
        }
        li:last-child {
          margin-right: 0;
        }
      }
    }

    #projects {
      .bg_tableHeader {
        width: 100%;
        height: projectTableHeaderHeight;
        position: fixed;
        z-index: 100;
        background: colorBGDarkGrey;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
        background-image: linear-gradient(colorSoftGradientGreyStart, colorSoftGradientGreyStop);
        border-top: borderBasicMedium;
        border-bottom: borderBasicDark;
        box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);
      }
      table {
        background: colorBGDarkGrey;
        thead {
          height: 0;
          padding: 0;
          margin: 0;
          color: #eee;
          tr {
            th {
              font-weight: normal;
              text-shadow: 0 1px 0 #000;
              div {
                display: block;
                height: projectTableHeaderHeight;
                position: fixed;
                z-index: 101;
                white-space: nowrap;
                .unit {
                  font-weight: 100;
                  font-size: 12px;
                  color: #999;
                }
              }
            }
          }
        }
        tbody {
          color: #aaa;
          border-top: projectTableHeaderHeight solid #333;
          tr {
            border-bottom: 1px solid #202020;
            td {
              width: 25%;
              //text-align: center;
              .status {
                background: colorOKBlue;
                width: 12px;
                height: 12px;
                display: block;
                text-indent: -100%;
                overflow: hidden;
                border-radius: 6px;
                box-shadow: 0 1px 0 #444;
                //margin: 0 auto;
              }
              .status.OK {
                background: colorOKBlue;
              }
              .status.Warning {
                background: colorWarningYellow;
              }
              .status.Alert {
                background: colorAlertRed;
              }
            }
            td.name {
              text-align: left;
            }
          }
          tr:nth-child(odd) {
            background-color: colorBGMediumGrey;
          }
          tr:hover {
            background-color: colorBGLightGrey;
          }
        }
        border: none;
        border-bottom: 1px solid #ccc;
        width: 100%;
        margin: 0;
        height: 100%;
      }
    }
  }
  .projectView {
    #map_view {
      height: 300px;
    }
  }
}

// Map View Icons
.icon {
  width: 25px;
  height: 41px;
}

.ok {
  background: url('/public/img/icon_marker_ok.png');
}

.warning {
  background: url('/public/img/icon_marker_warn.png');
}

.alert {
  background: url('/public/img/icon_marker_alert.png');
}
