<fieldset class="name">
  <div>
    <label for="name">{{$ 'Name' }}</label>
    <input id="name" name="name" type="text" tabindex="1" value="{{ display_name }}">
  </div>

  <div>
    <label for="site_label">{{$ 'Site Label' }}</label>
    <input id="site_label" name="site_label" type="text" tabindex="7" value="{{ site_label }}">
  </div>
</fieldset>

<fieldset class="location">
  <div>
    <label for="address">{{$ 'Address' }}</label>
    <input id="address" name="address" type="text" tabindex="2" value="{{ address }}">

    <label for="city">{{$ 'City' }}</label>
    <input id="city" name="city" type="text" tabindex="3" value="{{ city }}">

    <label for="state">{{$ 'State' }}</label>
    <input id="state" name="state" type="text" tabindex="4" value="{{ state }}">

    <label for="zipcode">{{$ 'Zip Code' }}</label>
    <input id="zipcode" name="zipcode" type="text" tabindex="5" value="{{ zipcode }}">
  </div>
  <div>
    <label for="latitude">{{$ 'Latitude' }}</label>
    <input id="latitude" name="latitude" type="text" tabindex="8" value="{{ latitude }}">

    <label for="longitude">{{$ 'Longitude' }}</label>
    <input id="longitude" name="longitude" type="text" tabindex="9" value="{{ longitude }}">

    <label for="elevation">{{$ 'Elevation' }}</label>
    <input id="elevation" name="elevation" type="text" tabindex="10" value="{{ elevation }}">
  </div>
</fieldset>

<fieldset>
  <label for="description">{{$ 'Description' }}</label>
  <textarea id="description" name="description" tabindex="6">{{ description }}</textarea>
</fieldset>
