<section class="energyMetrics">
  <h3>Energy Production (to date)</h3>
  <div class="generated metric">
    <div class="label">{{$ 'Week'}}</div>
    <div class="value">{{ unitConversion kpis.energyProduction.week 'M' }}<span class="unit">MWh</span></div>
  </div>
  <div class="forecast metric">
    <div class="label">{{$ 'Month'}}</div>
    <div class="value">{{ unitConversion kpis.energyProduction.month 'M' }}<span class="unit">MWh</span></div>
  </div>
  <div class="modeled metric">
    <div class="label">{{$ 'Year'}}</div>
    <div class="value">{{ unitConversion kpis.energyProduction.year 'M' }}<span class="unit">MWh</span></div>
  </div>
</section>
<section class="snapshots">
  <h3>{{$ 'Performance Snapshot'}}</h3>
  <div class="snapshot power">
    <div class="label">{{$ 'Power'}}</div>
    <div class="value">{{ unitConversion kpis.power 'k' }} <span class="unit">kW</span></div>
    <div class="indicator">
      <div class="bar"><span style="width:{{ percent kpis.power ac_capacity null 0 }}%;"></span></div>
      <div class="legend">
        <span class="min">0</span>
        <span class="max">{{ unitConversion ac_capacity 'k' }} kW</span>
      </div>
    </div>
  </div>
  <div class="snapshot irradiance">
    <div class="label">{{$ 'Irradiance'}}</div>
    <div class="value">{{ roundNumber kpis.irradiance 0 }} <span class="unit">W/m<sup>2</sup></span></div>
    <div class="indicator">
      <div class="bar"><span style="width:{{ percent kpis.irradiance 1000 }}%;"></span></div>
      <div class="legend">
        <span class="min">0</span>
        <span class="max">1000 W/m<sup>2</sup></span>
      </div>
    </div>
  </div>
  <div class="snapshot dpi">
    <div class="label">{{$ 'PR'}}</div>
    <div class="value">{{ roundNumber kpis.pr 0 }} <span class="unit">%</span></div>
    <div class="indicator">
      <div class="bar"><span style="width:{{ percent kpis.pr 100 100 }}%;"></span></div>
      <div class="legend">
        <span class="min">0</span>
        <span class="max">100%</span>
      </div>
    </div>
  </div>
</section>
