<fieldset class="name">
  <div>
    <label for="name">{{$ 'Name' }}</label>
    <input id="name" name="name" type="text" tabindex="1" value="{{ display_name }}">

    <label for="make">{{$ 'Make' }}</label>
    <input id="make" name="make" type="text" tabindex="3" value="{{ make }}">

    <label for="model">{{$ 'Model' }}</label>
    <input id="model" name="model" type="text" tabindex="4" value="{{ model }}">
  </div>

  <div>
    <label for="label">{{$ 'Label' }}</label>
    <input id="label" name="label" type="text" tabindex="2" value="{{ label }}">

    <label for="extends">{{$ 'Extends From' }}</label>
    <input id="extends" name="extends" type="text" tabindex="5" value="{{ extends_from }}">
  </div>
</fieldset>

<fieldset>
  <label for="description">{{$ 'Description' }}</label>
  <textarea id="description" name="description" tabindex="6">{{ description }}</textarea>
</fieldset>
