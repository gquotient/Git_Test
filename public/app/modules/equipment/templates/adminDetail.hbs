<fieldset class="name">
  <div>
    <label for="name">{{$ 'Name' }}</label>
    <input id="name" name="name" type="text" value="{{ name }}">

    <label for="make">{{$ 'Make' }}</label>
    <input id="make" name="make" type="text" value="{{ make }}">

    <label for="model">{{$ 'Model' }}</label>
    <input id="model" name="model" type="text" value="{{ model }}">
  </div>

  <div>
    <label for="label">{{$ 'Label' }}</label>
    <input id="label" name="label" type="text" value="{{ label }}">

    <label for="inherits">{{$ 'Inherits From' }}</label>
    <input id="inherits" name="inherits" type="text" value="{{ inherits }}">
  </div>
</fieldset>

<fieldset>
  <label for="description">{{$ 'Description' }}</label>
  <textarea id="description" name="description">{{ description }}</textarea>
</fieldset>
