<div class="info">
  <h3>{{ alarm.alarm_type }}</h3>
  <strong>Device</strong>: <span class="deviceName"></span><br>
  <strong>Created on</strong>: {{ date alarm.activated_at }}<br>
  <strong>Trigger Condition</strong>: {{ prettyColumnName alarm.device_column }} {{ alarm.active_conditions.0.comparator }} {{ roundNumber alarm.active_conditions.0.threshold 0 }}W
</div>

<div class="module chart"></div>

<div class="projectInfo">
  <strong>{{ project.display_name }}</strong> -
  {{ project.address }} {{ project.city }}, {{ project.state }} {{ project.zipcode }}
  <strong>{{$ 'AC Capacity' }}</strong>: {{ unitConversion project.ac_capacity 'k' }}kW
  <strong>{{$ 'DC Capacity' }}</strong>: {{ unitConversion project.dc_capacity 'k' }}kW
</div>
